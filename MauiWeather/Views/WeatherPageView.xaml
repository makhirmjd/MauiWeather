<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiWeather.Views.WeatherPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:ViewModels="clr-namespace:MauiWeather.ViewModels"
    Title="WeatherPageView"
    x:DataType="ViewModels:WeatherPageViewModel">
    <Grid Margin="15" RowDefinitions=".08*,.1*,.5*,.1*,.3*">
        <Grid>
            <Border BackgroundColor="White" />
            <SearchBar
                x:Name="SearchBar"
                Placeholder="Search"
                SearchCommand="{Binding SearchCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference SearchBar}}"
                TextColor="Black"
                VerticalOptions="Center" />
        </Grid>
        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStackLayout}">
            <Label Style="{StaticResource Title}" Text="{Binding PlaceName}" />
            <Label Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}" />
        </VerticalStackLayout>
        <Skia:SKLottieView
            Grid.Row="2"
            RepeatCount="-1"
            Source="storm.json" />
        <Grid Grid.Row="3" ColumnDefinitions="*,*,*">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Style="{StaticResource WeatherTitle}" Text="Temp" />
                <Label Style="{StaticResource WeatherValue}" Text="{Binding Weather.Current.Temperature, StringFormat='{0}°C'}" />
            </VerticalStackLayout>
            <VerticalStackLayout
                Grid.Column="1"
                HorizontalOptions="Center"
                Spacing="10">
                <Label Style="{StaticResource WeatherTitle}" Text="Wind" />
                <Label Style="{StaticResource WeatherValue}" Text="{Binding Weather.Current.WindSpeed, StringFormat='{0}Km/h'}" />
            </VerticalStackLayout>
            <VerticalStackLayout
                Grid.Column="2"
                HorizontalOptions="Center"
                Spacing="10">
                <Label Style="{StaticResource WeatherTitle}" Text="Weather" />
                <Label Style="{StaticResource WeatherValue}" Text="{Binding Weather.Current.WeatherCode}" />
            </VerticalStackLayout>
        </Grid>
        <CollectionView Grid.Row="4">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource Card}">
                        <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                            <Skia:SKLottieView
                                HeightRequest="50"
                                IsAnimationEnabled="False"
                                Source="mist.json"
                                WidthRequest="50" />
                            <Label Text="08-02-2050" TextColor="{StaticResource Yellow100Accent}" />
                            <Label Text="50°C" />
                            <Label Text="Sunny" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>